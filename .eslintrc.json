{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "plugins": [
        "@typescript-eslint", 
        "import", 
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/no-unresolved": [
            "error",
            {
                "plugins":[
                    "module-resolve",
                    {
                        "alias":{
                            "@routes":"./src/routes",
                            "@controllers":"./src/controllers"
                        }
                    }
                ]
            }
        ]
    }

}
